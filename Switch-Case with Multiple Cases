let day = "Saturday";

switch (day) {
    case "Monday":
    case "Tuesday":
    case "Wednesday":
    case "Thursday":
    case "Friday":
        console.log("It's a weekday. Time to work!");
        break;
    case "Saturday":
    case "Sunday":
        console.log("It's the weekend! Time to relax.");
        break;
    default:
        console.log("Invalid day.");
}
